<button class="btn btn-primary btn-create-open" type="button" data-toggle="collapse" data-target="#collapse" aria-expanded="false" aria-controls="collapse">
    Create action
</button>
<div class="collapse add-form" id="collapse">
    <div class="card card-body">
        <form id="createActionForm" action="/Action/Create" method="Post">
            <div class="form-group">
                <label for="actionName">Name</label>
                <input type="text" name="name" class="form-control" id="actionName">
            </div>
            <div class="form-group">
                <label for="actionDate">Date</label>
                <input type="date" name="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" id="actionDate">
            </div>
            <button class="btn btn-primary" type="submit">Create</button>
        </form>
    </div>
</div>